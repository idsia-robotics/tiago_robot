<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- PROPERTIES -->
  <xacro:property name="head_link_name" value="head_2_link"/>
  <xacro:property name="head_friction" value="1.0" />
  <xacro:property name="head_damping" value="0.5" />
  <xacro:property name="head_max_vel" value="3.0" />
  <xacro:property name="head_1_lower_limit" value="-75"/>
  <xacro:property name="head_1_upper_limit" value="75"/>
  <xacro:property name="head_2_lower_limit" value="-60"/>
  <xacro:property name="head_2_upper_limit" value="45"/>
  <xacro:property name="head_eps" value="${0.00 if no_safety_eps else 0.07}" />

  <!-- INCLUDES -->
  <xacro:include filename="$(find pal_urdf_utils)/urdf/deg_to_rad.urdf.xacro" />
  <xacro:include filename="$(find tiago_description)/urdf/sensors/orbbec_astra.urdf.xacro" />
  <xacro:include filename="$(find tiago_description)/urdf/sensors/azure_kinect.urdf.xacro" />
  <xacro:include filename="$(arg description_calibration_dir)/calibration_constants.urdf.xacro" />

  <!-- MACRO DEFINITION-->

  <!-- head_1 (pan) -->
  <xacro:macro name="head_1" params="name parent">
    <link name="${name}_link">
      <inertial>
        <origin xyz="-0.009401 0.0 0.078826" rpy="0.00000 0.00000 0.00000"/>
        <mass value="0.121"/>
        <inertia ixx="0.00035237400" ixy="-0.00000000100" ixz="0.00000793600" iyy="0.00038520500" iyz="-0.00000000500" izz="0.00028131647"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://tiago_description/meshes/head/head_1_custom.stl" scale="1 1 1"/>
        </geometry>
        <material name="White" />
      </visual>
      <collision>
        <origin xyz="0.0 0 0" rpy="0 0 0.0" />
        <geometry>
          <mesh filename="package://tiago_description/meshes/head/head_1_custom_collision.dae" scale="1 1 1"/>
        </geometry>
        <material name="White" />
      </collision>
    </link>

    <joint name="${name}_joint" type="revolute">
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <origin xyz="0.182 0.0 0.0" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${head_1_lower_limit * deg_to_rad}" upper="${head_1_upper_limit * deg_to_rad}" effort="5.197" velocity="${head_max_vel}" />
      <dynamics damping="${head_damping}" friction="${head_friction}"/>
      <safety_controller k_position="20" k_velocity="20" soft_lower_limit="${head_1_lower_limit * deg_to_rad + head_eps}" soft_upper_limit="${head_1_upper_limit * deg_to_rad - head_eps}" />
    </joint>

    <gazebo reference="${name}_link">
      <mu1>0.9</mu1>
      <mu2>0.9</mu2>
    </gazebo>

    <gazebo reference="${name}_joint">
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

  </xacro:macro>

  <!-- head_2 (tilt) -->
  <xacro:macro name="head_2" params="name parent">
    <link name="${name}_link">
      <inertial>
        <origin xyz="0.031286 0.058285 -0.0" rpy="0.00000 0.00000 0.00000"/>
        <mass value="0.429"/>
        <inertia ixx="0.002283740" ixy="-0.000222116" ixz="-0.000000055" iyy="0.002750291" iyz="0.000000369" izz="0.002330453"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://tiago_description/meshes/head/head_2_custom.stl" scale="1 1 1"/>
        </geometry>
        <material name="White" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://tiago_description/meshes/head/head_2_custom_collision.dae" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>

    <joint name="${name}_joint" type="revolute">
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <origin xyz="0.005 0.0 0.098" rpy="${90.0 * deg_to_rad} 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${head_2_lower_limit * deg_to_rad}" upper="${head_2_upper_limit * deg_to_rad}" effort="2.77" velocity="${head_max_vel}" />
      <dynamics damping="${head_damping}" friction="${head_friction}"/>

      <safety_controller k_position="20" k_velocity="20" soft_lower_limit="${head_2_lower_limit * deg_to_rad + head_eps}" soft_upper_limit="${head_2_upper_limit * deg_to_rad - head_eps}" />
    </joint>

  </xacro:macro>

  <!-- Complete head -->
  <xacro:macro name="head" params="name parent">

    <!-- Head links -->
    <xacro:head_1 name="${name}_1" parent="${parent}" />
    <xacro:head_2 name="${name}_2" parent="${name}_1_link"/>

    <!-- Orbecc Astra Virtual -->
    <xacro:orbbec_astra name="head_front_camera" parent="${name}_2_link" camera_model="orbbec-astra" extrinsic_calibration_dir="${extrinsic_calibration_dir}">
      <origin xyz="${camera_position_x} ${camera_position_y} ${camera_position_z}" rpy="${camera_orientation_r} ${camera_orientation_p} ${camera_orientation_y}" />
      <origin xyz="0 0 0" rpy="${-90 * deg_to_rad} ${0 * deg_to_rad} ${-90 * deg_to_rad}" />
    </xacro:orbbec_astra>

    <!-- Azure Kinect -->
    <!-- Parent link frame to Kinect Screw Mount -->
    <xacro:azure_kinect name="azure_kinect" parent="${name}_2_link" xyz="0.0414 0.0725 0" rpy="${-90 * deg_to_rad} 0.0 0.0" >
    </xacro:azure_kinect>

  </xacro:macro>

</robot>
 